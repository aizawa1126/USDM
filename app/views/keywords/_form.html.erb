<%= form_with(model: keyword, url: params[:project_id].nil? ? keyword_path : project_keywords_path, local: true) do |form| %>
  <% if keyword.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(keyword.errors.count, "error") %> prohibited this keyword from being saved:</h2>

      <ul>
      <% keyword.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, "名前" %>
    <%= form.text_field :name, id: :keyword_name %>
  </div>

  <div class="field" hidden>
    <%= form.label :project_id %>
    <% project_id = !params[:project_id].nil? ? params[:project_id] : @keyword.project_id %>
    <%= form.text_field :project_id, id: :keyword_project_id, value: project_id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
