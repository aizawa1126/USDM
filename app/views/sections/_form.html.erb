<%= form_with(model: section, url: params[:chapter_id].nil? ? section_path : chapter_sections_path, local: true) do |form| %>
  <% if section.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(section.errors.count, "error") %> prohibited this section from being saved:</h2>

      <ul>
      <% section.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :number, "カテゴリ番号" %>
    <%= form.number_field :number, id: :section_number %>
  </div>

  <div class="field">
    <%= form.label :name, "カテゴリ名" %>
    <%= form.text_field :name, id: :section_name %>
  </div>

  <div class="field" hidden>
    <%= form.label :chapter_id %>
    <% chapter_id = !params[:chapter_id].nil? ? params[:chapter_id] : @section.chapter_id %>
    <%= form.number_field :chapter_id, id: :section_chapter_id, value: chapter_id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
