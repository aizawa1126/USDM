<%= form_with(model: section, local: true) do |form| %>
  <% if section.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(section.errors.count, "error") %> prohibited this section from being saved:</h2>

      <ul>
      <% section.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :number %>
    <%= form.number_field :number, id: :section_number %>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :section_name %>
  </div>

  <div class="field" hidden>
    <%= form.label :chapter_id %>
    <%= form.number_field :chapter_id, id: :section_chapter_id, value: @chapter.id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
