<table border="5" rules="all">
  <tr>
    <th class="category">カテゴリ名</th>
    <th class="requirement" colspan="3">要求</th>
    <th class="spec_number">要求番号</th>
    <th class="description" >説明</th>
    <th class="note" >備考</th>
  </tr>
  <% if !hasSections? %>
  <tr>
    <td colspan="7" class="category"><%= link_to 'カテゴリを追加', new_section_path(chapter_id: @chapter.id) %></td>
  </tr>
  <% else %>
  <%= render 'table', chapter: @chapter %>
  <% end %>
</table>

<% if @chapter.sections.count != 0 %>
<%= link_to 'カテゴリを追加', new_section_path(chapter_id: @chapter.id) %>
<% end %>

<%= link_to 'Edit', edit_chapter_path(@chapter) %> |
<%= link_to 'Back', chapters_path %>
