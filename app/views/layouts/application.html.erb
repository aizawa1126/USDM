<!DOCTYPE html>
<html>
  <head>
    <title>Usdm</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="headerArea">
      <div class="logo">
      <% if !@specification.nil? %>
      <%= link_to @specification.title, @specification %>
      <% else %>
      <%= link_to "仕様書一覧", root_path %>
      <% end %>
      </div>
      <ul class="menu">
        <% if logged_in? %>
        <% if current_user.admin %>
        <li><%= link_to "ユーザー管理", users_path %></li>
        <% end %>
        <li><%= link_to current_user.name, current_user %></li>
        <li><%= link_to "Log out", logout_path, method: "delete" %></li>
        <% else %>
        <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </div>
    <div id="contentsArea">
    <%= yield %>
    </div>
    <div id="footerArea">Footer</div>
  </body>
</html>
