<div id="header">
  <h1><%= "Project Name" %></h1>
  <div id="main-menu">
    <ul>
      <li><%= link_to 'ユーザー登録', new_user_path %></li>
    </ul>
  </div>
</div>

<div id="contentsArea">
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>

        <td>
          <% if !user.admin? %>
          <%= link_to '削除', user, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
