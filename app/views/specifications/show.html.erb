<p id="notice"><%= notice %></p>

<p class="document_name">
  <%= @specification.title %>
</p>

<p class="version">
  第<%= @specification.version %>版
</p>

<p class="update_at">
  <%= @specification.updated_at %>
</p>

<p>目次</p>

<% @specification.chapters.order("number").each do |chapter| %>
<p>
  <%= "第"+chapter.number.to_s+"章"  %>
  <%= link_to chapter.name, chapter_path(chapter.id) %>
</p>
<% end %>

<%= link_to '章を追加', new_chapter_path(specification_id: @specification.id) %>

<%= link_to 'Edit', edit_specification_path(@specification) %> |
<%= link_to 'Back', specifications_path %>
