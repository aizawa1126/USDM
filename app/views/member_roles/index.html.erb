<p id="notice"><%= notice %></p>

<h1>Member Roles</h1>

<table>
  <thead>
    <tr>
      <th>Member</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @member_roles.each do |member_role| %>
      <tr>
        <td><%= member_role.member_id %></td>
        <td><%= member_role.role_id %></td>
        <td><%= link_to 'Show', member_role %></td>
        <td><%= link_to 'Edit', edit_member_role_path(member_role) %></td>
        <td><%= link_to 'Destroy', member_role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

